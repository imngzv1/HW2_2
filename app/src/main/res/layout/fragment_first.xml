<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_fr_1"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:background="@drawable/botton_views_bg"
        android:text="Go To Second Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_fr_2"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:background="@drawable/botton_views_bg"
        android:text="Go To Third Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_fr_1"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_fr_3"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:background="@drawable/botton_views_bg"
        android:text="Go To Fourth Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_fr_2"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>